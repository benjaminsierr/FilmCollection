@{
    ViewBag.title = "Add a Movie";
}

@model FilmCollection.Models.Movie
<!-- Contact Section-->
<br />
<br />
<section class="page-section" id="contact">
    <div class="container">
        <!-- Contact Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0"> Add a Movie</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Contact Section Form-->
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19.-->
                <form id="contactForm" name="sentMessage" novalidate="novalidate" method="post">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label asp-for="Title">Title</label>
                            <input class="form-control" asp-for="Title" id="title" name="title" type="text" placeholder="Title" />
                            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Title)</div>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Category</label>
                            <select class="form-control" asp-for="Category" id="category" name="category">
                                <option value="">Select a Category</option>
                                <option value="action">Action</option>
                                <option value="comedy">Comedy</option>
                            </select>
                            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Category)</div>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label asp-for="Year">Year</label>
                            <input asp-for="Year" class="form-control" id="year" type="number" name="year" placeholder="Year" />
                            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Year)</div>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label asp-for="Director">Director</label>
                            <input asp-for="Director" type="text" class="form-control" id="director" name="director" placeholder="Director">
                            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Director)</div>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label asp-for="Rating">Rating</label>
                            <select asp-for="Rating" class="form-control" id="rating" name="rating">
                                <option value="">Select a Rating</option>
                                <option value="G">G</option>
                                <option value="PG">PG</option>
                                <option value="PG-13">PG-13</option>
                                <option value="R">R</option>
                            </select>
                            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Rating)</div>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label asp-for="Edited">Edited</label>
                            <select asp-for="Edited" class="form-control" id="edited" name="edited">
                                <option value="">Is this film edited?</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label asp-for="LentTo">Lent To:</label>
                            <input asp-for="LentTo" type="text" class="form-control" id="lentto" name="lentto" placeholder="Lent to">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label asp-for="Notes">Notes</label>
                            <textarea asp-for="Notes" class="form-control" id="notes" name="notes" rows="5" placeholder="Notes"></textarea>
                        </div>
                    </div>
                    <br />
                    <div id="success"></div>
                    <div class="form-group"><button class="btn btn-primary btn-xl" id="sendMessageButton" type="submit">Submit</button></div>
                </form>
            </div>
        </div>
    </div>
</section>