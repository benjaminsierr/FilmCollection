@model Movie

<!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19.-->
<form id="contactForm" name="sentMessage" novalidate="novalidate" method="post" asp-action="EditMovie">
    <div class="control-group">
        <div class="form-group floating-label-form-group controls mb-0 pb-2">
            <label asp-for="MovieID" display="none"></label>
            <input type="hidden" />
            <label asp-for="Title">Title</label>
            <input class="form-control" asp-form="Movie" value="@Model.Title" id="title" name="title" type="text" placeholder="Title" />
            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Title)</div>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls mb-0 pb-2">
            <label>Category</label>
            <select class="form-control" asp-for="Category" value=@Model.Category id="category" name="category">
                <option value="">Select a Category</option>
                <option value="action">Action</option>
                <option value="comedy">Comedy</option>
                <option value="drama">Drama</option>
                <option value="family">Family</option>
                <option value="horror">Horror</option>
                <option value="misc">Misc</option>
                <option value="television">Television</option>
                <option value="vhs">VHS</option>

            </select>
            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Category)</div>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls mb-0 pb-2">
            <label asp-for="Year">Year</label>
            <input asp-for="Year" class="form-control" id="year" type="number" name="year" placeholder="Year" />
            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Year)</div>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls mb-0 pb-2">
            <label asp-for="Director">Director</label>
            <input asp-for="Director" type="text" class="form-control" id="director" name="director" placeholder="Director">
            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Director)</div>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls mb-0 pb-2">
            <label asp-for="Rating">Rating</label>
            <select asp-for="Rating" class="form-control" id="rating" name="rating">
                <option value="">Select a Rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <div style="font-style: italic; font-size: .9rem; color: #ff0000;">@Html.ValidationMessageFor(model => model.Rating)</div>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls mb-0 pb-2">
            <label asp-for="Edited">Edited</label>
            <select asp-for="Edited" class="form-control" id="edited" name="edited">
                <option value="">Is this film edited?</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls mb-0 pb-2">
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" type="text" class="form-control" id="lentto" name="lentto" placeholder="Lent to">
        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls mb-0 pb-2">
            <label asp-for="Notes">Notes</label>
            <textarea asp-for="Notes" class="form-control" id="notes" name="notes" rows="5" placeholder="Notes"></textarea>
        </div>
    </div>
    <br />
    <div id="success"></div>
    <div class="form-group"><button class="btn btn-primary btn-xl" id="sendMessageButton" type="submit">Submit</button></div>
</form>